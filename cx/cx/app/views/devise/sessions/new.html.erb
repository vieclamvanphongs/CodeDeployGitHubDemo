
<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
   <% if current_page?(new_nhatuyendung_session_path) %>
<% content_for :title, "Nhà Tuyển dụng Đăng nhập"%>
<% content_for :description, "Nhà Tuyển dụng Đăng nhập"%>
<% content_for :keywords,"Nhà Tuyển dụng Đăng nhập"%>
   <h3>Nhà Tuyển dụng Đăng nhập</h3>
   <%else%>
   <% content_for :title, "Người Tìm việc Đăng nhập"%>
   <% content_for :description, "Người Tìm việc Đăng nhập"%>
<% content_for :keywords,"Người Tìm việc Đăng nhập"%>
   <h3>Người Tìm việc Đăng nhập</h3>
    <% end %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%- if devise_mapping.registerable? %>
       
      <% end -%>
     <%= f.label "Email"%></br>
      <%= f.email_field :email, :autofocus => true,:size => "40" %>
    </div>
    <div class="form-group">
      <%- if devise_mapping.recoverable? %>
      
      <% end -%>
      <%= f.label "Mật khẩu" %></br>
      <%= f.password_field :password,:size => "40" %>
    </div>
      <%= f.submit 'Đăng nhập', :class => 'button right' %>
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox" style="width:150px">
          <label>
            <%= f.check_box :remember_me %> Remember me
          </label>
		  </br>  <%= link_to "Quên mật khẩu?", new_password_path(resource_name), class: 'right' %>
		   </br><%= link_to 'Đăng ký', new_registration_path(resource_name), class: 'right'  %>
        </div>
      <% end -%>
  <% end %>
</div>
